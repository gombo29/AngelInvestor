{% extends 'happyCmsBundle::base.html.twig' %}
{% block pageheader %}Мэдээний дэлгэрэнгүй{% endblock %}
{% block body %}
    {% include ':inc:flashmsg.html.twig' %}

    <table class="table table-hover table-striped">
        <tbody>
        <tr>
            <td>

            </td>
            <td>
                <img src="/{{ statfolder }}{{ content.img }}" width="300">
            </td>
        </tr>
        <tr>
            <td>Нэр</td>
            <td>{{ content.name }}</td>
        </tr>
        <tr>
            <td>Байрлал</td>
            <td>{% if content.contentbairlal %}{{ content.contentbairlal.name }} {% else %}{% endif %}</td>
        </tr>
        <tr>
            <td>Тайлбар</td>
            <td>{{ content.describe|raw }}</td>
        </tr>
        <tr>
            <th>Created date</th>
            <td>{% if content.createdDate %}{{ content.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Updated date</th>
            <td>{% if content.updatedDate %}{{ content.updatedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>
    <ul style="list-style: none;float: left">
        <li style="float: left">
            <a class="btn btn-success"
               href="{{ path('cms_content_update', { 'id': content.id, 'currentRoute' : currentRoute }) }}">Засах</a>
        </li>

        <li style="float: left">
            {{ form_start(delete_form) }}
            <input onclick="if(!confirm('Итгэлтэй байна уу!'))return false;" type="submit" value="Устгах"
                   class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>

    </ul>
    <a style="float: right" href="{{ currentRoute }}">Буцах</a>
{% endblock %}
