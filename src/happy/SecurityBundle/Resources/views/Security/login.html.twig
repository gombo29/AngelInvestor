{% extends "@happyWeb/Layout/base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block style %}
    <style>
        input[type="date"], input[type="datetime-local"], input[type="email"], input[type="number"], input[type="password"], input[type="search-md"], input[type="search"], input[type="tel"], input[type="text"], input[type="time"], input[type="url"], textarea.md-textarea {
            font-weight: 300;
            height: 1.5rem;
            font-size: 14px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container col-lg-3 col-md-3 col-sm-8 col-xs-12 acc-margin">
        <div class="card">
            <a class="header-login" href="{{ path('happy_web_default_index') }}">
                <img src="{{ asset('recource/logo.png') }}" style="width:40%;display: inline-block;margin-top: 20px">
            </a>
            <div class="card-block">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        {% if error %}
                            <p style="color: red;text-align: center">
                                {{ 'Нэвтрэх нэр эсвэл нууц үг буруу'|trans }}
                            </p>
                        {% endif %}
                        <div>
                            <input class="form-control" type="text" id="username" name="_username"
                                   value="{{ last_username }}" required="required" autofocus
                                   placeholder="{% if app.request.locale == 'en' %}Username{% else %} Нэвтрэх нэр{% endif %}"/>
                        </div>
                        <div>
                            <input class="form-control" type="password" id="password" name="_password"
                                   required="required"
                                   placeholder="{% if app.request.locale == 'en' %}Password{% else %} Нууц үг{% endif %}"/>
                        </div>

                        <button class="btn btn-md btn-primary btn-block">{% if app.request.locale == 'en' %}Login{% else %} Нэвтрэх{% endif %}</button>
                    </form>
                </div>
                <div class="card-block">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                        <div>
                            <a href="{{ path('fos_user_registration_register') }}" style="margin-bottom: 20px;"><i
                                        class="fa fa-user-plus"></i> {% if app.request.locale == 'en' %}Register{% else %} Бүртгүүлэх{% endif %}
                            </a>
                        </div>

                        <div><a href=""><i
                                        class="fa fa-key"></i> {% if app.request.locale == 'en' %}Forget password{% else %}Нууц үг мартсан{% endif %}
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}