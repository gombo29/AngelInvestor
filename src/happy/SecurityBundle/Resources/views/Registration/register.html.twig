{% extends "@happyWeb/Layout/base.html.twig" %}

 {% block style %}
     <style>
         label {
             margin-left: 5px;
             margin-right: 10px;
             font-size: 14px;
         }

         input[type="date"], input[type="datetime-local"], input[type="email"], input[type="number"], input[type="password"], input[type="search-md"], input[type="search"], input[type="tel"], input[type="text"], input[type="time"], input[type="url"], textarea.md-textarea {
             font-weight: 300;
             height: 1.5rem;
             font-size: 14px;
         }

         .register ul li
         {
             color: red;
             font-size: 12px;
         }
     </style>
 {% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="container col-lg-4 col-md-4 col-sm-8 col-xs-12 acc-margin">
    <div class="card">
        <a class="header-login" href="{{ path('happy_web_default_index') }}">
            <img src="{{ asset('recource/logo.png') }}" style="width:40%;display: inline-block;margin-top: 20px">
        </a>
        <div class="card-block">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{ form_start(form) }}
                <div class="col-md-12 register">
                    {{ form_errors(form) }}

                    {{ form_row(form.isInvestor) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.plainPassword) }}

                    <div class="login-container">
                        <button type="submit" class="btn btn-md btn-primary btn-block">{% if app.request.locale == 'en' %}Register{% else %} Бүртгүүлэх{% endif %}</button>
                        <div class="register-login login-margin">
                            <a href="{{ path('fos_user_security_login') }}"><i class="fa fa-user"></i>{% if app.request.locale == 'en' %} Login{% else %} Нэвтрэх{% endif %}</a>
                        </div>
                    </div>
                </div>
                {#</form>#}
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}